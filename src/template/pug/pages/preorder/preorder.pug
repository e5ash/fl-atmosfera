extends ../../templates/default
block vars
	-
		title = "Предзаказ"
		breadcrumbs = [
			['', '.html'],
			[title]
		]
block content
	include ../../../blocks/intro/intro
	include ../../../blocks/sports/sports
	.page
		.case
			// +breadcrumbs
			.page__wrap.row
				.page__aside
					include ../../../blocks/navus/navus
				.page__section
					.page__head
						.page__icon
							img(src="uploads/" alt="")
						.page__title.h3= title
					.page__body
						.page__text
							p Уважаемые дамы и господа, в данном разделе вы можете оформить предзаказ на тот или иной товар/услугу. Заполните внимательно поля, которые находятся перед кнопкой Добавить в корзину. Всю готовую продукцию Вы можете купить в разделе #[a(href="") Каталог продукции] или через #[a(href="") Фотосток] или #[a(href="") Видеотека].
							p Еслм Вашего для Вашего турнира нет Пакетов в том или ином предзаказе (Видео, Фото, Комплекты, Сувениры), то данный вид предзаказа недоступен для этого мероприятия.
						.page__cats.cats
							.cats__list.row
								+catsItem('Видеосъемка', '')
								+catsItem('Фотосессия', '')
								+catsItem('Комплекты', '')
								+catsItem('Сувениры', '')
