extends ../../templates/default
block vars
	-
		title = "Наклейка на автомобиль"
		breadcrumbs = [
			['Каталог продукции', 'catalog.html'],
			[title]
		]
block content
	include ../../../blocks/intro/intro
	include ../../../blocks/sports/sports
	.page
		.case
			+breadcrumbs
			.page__wrap.row
				.page__aside
					include ../../../blocks/navus/navus
				.page__section
					.page__head
						.page__icon
							img(src="uploads/cart-black.png" alt="")
						.page__title.h3= title
					.page__body
						.page__product.product
							.product__text
								p Авто винил - материал, позволяющий разместить любой сувенир на авто.
							.product__wrap.row
								- imgs = ['https://www.a-online.ru/assets/images/products/114/bodibilding.jpg', 'https://www.a-online.ru/assets/images/products/114/n-foot-1.jpg', 'https://www.a-online.ru/assets/images/products/114/n-foot-2.jpg', 'https://www.a-online.ru/assets/images/products/114/n-foot-3.jpg', 'https://www.a-online.ru/assets/images/products/114/n-foot-4.jpg', 'https://www.a-online.ru/assets/images/products/114/n-foot-5.jpg', 'https://www.a-online.ru/assets/images/products/114/n-basket-1.jpg', 'https://www.a-online.ru/assets/images/products/114/n-basket-2.jpg', 'https://www.a-online.ru/assets/images/products/114/n-basket-3.jpg', 'https://www.a-online.ru/assets/images/products/114/n-l-1.jpg', 'https://www.a-online.ru/assets/images/products/114/n-l-2.jpg']
								+imgs(imgs)
								
								.product__inner
									.product__settings
										.product__setting.psetting
											.psetting__list
												.psetting__item
													.psetting__title Цена
													.psetting__wrap
														.psetting__field.field.--sm.--b-gray.--p15
															.field__wrap
																input.field__area(type="tel" name="" value="0" readonly="readonly")
													.psetting__desc рублей
												.psetting__item
													.psetting__title Количество
													.psetting__wrap
														.psetting__field.field.--sm.--b-gray.--p15.--num
															.field__wrap
																input.field__area(type="number" name="" value="1" min="1" max="999")
													.psetting__desc шт.
												.psetting__item
													.psetting__title Формат
													.psetting__wrap
														+psettingSelect(['A4', 'A5', 'A6'])
													.psetting__desc
												.psetting__item
													.psetting__title Цвет
													.psetting__wrap
														+psettingSelect(['Золото', 'Серебро', 'Синий', 'Черный'])
													.psetting__desc
												.psetting__item
													.psetting__title Спорт
													.psetting__wrap
														+psettingSelect(['Теннис', 'Хоккей', 'Футбол', 'Единоборства'])
													.psetting__desc
												.psetting__item
													.psetting__title
													.psetting__wrap
														button.psetting__btn.btn.--md.--b-orange.btn-choise-photo.--fz18 Выбрать фотографии для товара
													.psetting__desc
												.psetting__item
													.psetting__title
													.psetting__wrap
														button.psetting__btn.btn.--md.--bg-orange.--fz18 Добавить в корзину
													.psetting__desc