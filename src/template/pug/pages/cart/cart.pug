extends ../../templates/default
block vars
	-
		title = "Корзина"
		breadcrumbs = [
			['', '.html'],
			[title]
		]
block content
	include ../../../blocks/intro/intro
	include ../../../blocks/sports/sports
	.page
		.case
			// +breadcrumbs
			.page__wrap.row
				.page__aside
					include ../../../blocks/navus/navus
				.page__section
					.page__head
						.page__icon
							img(src="uploads/" alt="")
						.page__title.h3= title
						.page__btn.btn.--md.--b-orange Продолжить покупки
					.page__body
						.cart
							.cart__list
								table.cart__table
									thead
										tr
											th 
											th Наименование
											th Количество
											th Цена
											th Стоимость
									tbody
										tr
											td
												.cart-pic
													img(src="" alt="")
											td
												.cart-data
													.cart-name Фото цифровое
											td
												.cart-incdec.incdec
											td
												.cart-price 100 ₽
											td
												.cart-price-total 100 ₽
												.cart-remove
										tr
											td
												.cart-pic
													img(src="" alt="")
											td
												.cart-data
													.cart-name Брелок
													.cart-desc
														p Форма - Футболка (35х50 мм.)
														p Бумага - Матовая
														p Примечание - фото: 3376795
											td
												.cart-incdec.incdec
											td
												.cart-price 250 ₽
											td
												.cart-price-total 250 ₽
												.cart-remove
								.cart__total
									.cart__total-title Итого
									.cart__total-value 350 ₽
								.cart__btn-next.btn.--md.--bg-orange Перейти к оформлению заказа