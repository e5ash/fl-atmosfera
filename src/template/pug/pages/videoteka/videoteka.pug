extends ../../templates/default
block vars
	-
		title = "Видеотека"
		breadcrumbs = [
			['', '.html'],
			[title]
		]
block content
	include ../../../blocks/intro/intro
	include ../../../blocks/sports/sports
	.page
		.case
			// +breadcrumbs
			.page__wrap.row
				.page__aside
					include ../../../blocks/navus/navus
				.page__section
					.page__head
						.page__icon
							img(src="uploads/videocamera-black.svg" alt="")
						.page__title.h3= title
					.page__body
						.fotostok
							.fotostok__list.row
								+fotostokItem('Гандбол', 'gandboll', true)
								+fotostokItem('Футбол', 'football')
								+fotostokItem('Флорбол', 'florball')
								+fotostokItem('Водные виды спорта', 'water-sports')
								+fotostokItem('Фигурное катание', 'skins')
								+fotostokItem('Пляжный волейбол', 'sand-volleyball')
								+fotostokItem('Танцы', 'dances')
								+fotostokItem('Фехтование', 'fencing', true)
								+fotostokItem('Большой тенис', 'tennis', true)
								+fotostokItem('Хокей', 'hockey', true)
								+fotostokItem('Футзал', 'footzal', true)
								+fotostokItem('Гимнастика', 'gymnastics')
								+fotostokItem('Баскетбол', 'basketball', true)
								+fotostokItem('Боевые единоборства', 'single-combats', true)
								+fotostokItem('Бадминтон', 'badminton', true)
								+fotostokItem('Спорт для семьи', 'sport-family', true)
								+fotostokItem('Детское творчество', 'kid-creation')