extends ../../templates/default
block vars
	-
		title = "Часы"
		breadcrumbs = [
			['Каталог продукции', 'catalog.html'],
			[title]
		]
block content
	include ../../../blocks/intro/intro
	include ../../../blocks/sports/sports
	.page
		.case
			+breadcrumbs
			.page__wrap.row
				.page__aside
					include ../../../blocks/navus/navus
				.page__section
					.page__head
						.page__icon
							img(src="uploads/" alt="")
						.page__title.h3= title
					.page__body
						.page__product.product
							.product__text
								p Часы - сувенир различных форм, выполненный в художественном стиле.
							.product__wrap.row
								- img = '.jpg'
								+imgs(img)
								
								.product__inner
									.product__settings
										.product__setting.psetting
											.psetting__list
												.psetting__item
													.psetting__title Цена
													.psetting__wrap
														.psetting__field.field.--sm.--b-gray
															.field__wrap
																input.field__area(type="tel" name="" value="0" readonly="readonly")
													.psetting__desc рублей
												.psetting__item
													.psetting__title Количество
													.psetting__wrap
														.psetting__field.field.--sm.--b-gray.--indec
															.field__wrap
																input.field__area(type="tel" name="" value="1")
													.psetting__desc шт.
												.psetting__item
													.psetting__title Форма
													.psetting__wrap
														+psettingSelect(['Круглые (Д=100 мм.)', 'Квадратные (124х124 мм.)', 'Круглые (Д=50 мм.)'])
													.psetting__desc
												.psetting__item
													.psetting__title Бумага
													.psetting__wrap
														+psettingSelect(['Матовая', 'Глянцевая'])
													.psetting__desc
												.psetting__item
													.psetting__title
													.psetting__wrap
														button.psetting__btn.btn.--md.--b-orange.btn-choise-photo Выбрать фотографии для товара
												.psetting__item
													.psetting__title
													.psetting__wrap
														button.psetting__btn.btn.--md.--bg-orange Добавить в корзину
													.psetting__desc